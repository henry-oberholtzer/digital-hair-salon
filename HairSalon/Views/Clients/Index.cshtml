@{
Layout = "_Layout";
}

@model List<Client>

<h1>All Clients</h1>

<a asp-controller="Clients" asp-action="Create">Add a client</a>

@if (@Model.Count == 0)
{
<h3>No clients have been added yet</h3>
}

@foreach (Client client in Model)
{
  <li><a asp-controller="Stylists" asp-action="Details" asp-route-id=@client.ClientId>@client.Name</a></li>
}
