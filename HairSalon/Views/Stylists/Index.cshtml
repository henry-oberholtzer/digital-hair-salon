@{
  Layout = "_Layout";
}

@if (Model.Count == 0)



{
  <li>No stylists exist in the system</li>
}

@foreach (Stylist stylist in Model)



{
  <li><a asp-controller="Stylists" asp-action="Details" asp-route-id=@stylist.StylistId>@stylist.Name</a> |
    @stylist.Clients.Count()</li>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
